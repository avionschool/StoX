<%= render 'layouts/messages' %>

<% if @stock %>
  <h3>Stock Info</h3>
  Symbol: <%= @stock.ticker %>
  Name: <%= @stock.name %>
  Price: <%= @stock.latest_price %>
  <% if !current_user.stock_tracked(@stock.ticker) %>
    <%= link_to 'Add', user_stocks_path(user: current_user, ticker: @stock.ticker), method: :post %>
  <% else %>
    <span>You are already tracking this stock.</span>
  <% end %>
<% end %>
